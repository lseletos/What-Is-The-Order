<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:background="@drawable/gamescreen"
    tools:ignore="Deprecated,ExtraText" >
    
    <ImageView
        android:id="@+id/imageViewPlaceholder1"
        android:layout_width="250dp"
        android:layout_height="189dp"
        android:layout_x="145dp"
        android:layout_y="240dp"
        android:contentDescription="1st"
        android:src="@drawable/first"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageViewPlaceholder2"
        android:layout_width="250dp"
        android:layout_height="189dp"
        android:layout_x="520dp"
        android:layout_y="240dp"
        android:contentDescription="2nd"
        android:src="@drawable/second"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageViewPlaceholder3"
        android:layout_width="250dp"
        android:layout_height="189dp"
        android:layout_x="905dp"
        android:layout_y="240dp"
        android:contentDescription="3rd"
        android:src="@drawable/third"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageSelectableOne"
        android:layout_width="286dp"
        android:layout_height="180dp"
        android:layout_x="124dp"
        android:layout_y="470dp"
        android:contentDescription="3rd"
        android:src="@drawable/block3"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageSelectableTwo"
        android:layout_width="286dp"
        android:layout_height="180dp"
        android:layout_x="499dp"
        android:layout_y="470dp"
        android:contentDescription="1st"
        android:src="@drawable/block1"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageSelectableThree"
        android:layout_width="286dp"
        android:layout_height="180dp"
        android:layout_x="884dp"
        android:layout_y="470dp"
        android:contentDescription="2nd"
        android:src="@drawable/block2"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageViewTopBanner"
        android:layout_width="358dp"
        android:layout_height="193dp"
        android:layout_x="476dp"
        android:layout_y="3dp"
        android:contentDescription="Bannerimg"
        android:src="@drawable/bannerpic"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="592dp"
        android:layout_y="196dp"
        android:text="Good Luck"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1102dp"
        android:layout_y="21dp"
        android:onClick="replayVideo"
        android:text="Replay Video"
        tools:ignore="HardcodedText" />

</AbsoluteLayout>
    